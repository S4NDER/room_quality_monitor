<p id="notice"><%= notice %></p>

<h1>Barometers</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barometers.each do |barometer| %>
      <tr>
        <td><%= barometer.value %></td>
        <td><%= link_to 'Show', barometer %></td>
        <td><%= link_to 'Edit', edit_barometer_path(barometer) %></td>
        <td><%= link_to 'Destroy', barometer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Barometer', new_barometer_path %>
