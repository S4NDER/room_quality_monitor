<p id="notice"><%= notice %></p>

<h1>Tempertures</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tempertures.each do |temperture| %>
      <tr>
        <td><%= temperture.value %></td>
        <td><%= link_to 'Show', temperture %></td>
        <td><%= link_to 'Edit', edit_temperture_path(temperture) %></td>
        <td><%= link_to 'Destroy', temperture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

